<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:orientation="horizontal">
        <Button
            style="@style/KeyStyle"
            android:text="1" />

        <Button
            style="@style/KeyStyle"
            android:text="2" />

        <Button
            style="@style/KeyStyle"
            android:text="3" />

        <Button
            style="@style/KeyStyle"
            android:text="4" />

        <Button
            style="@style/KeyStyle"
            android:text="5" />

        <Button
            style="@style/KeyStyle"
            android:text="6" />

        <Button
            style="@style/KeyStyle"
            android:text="7" />

        <Button
            style="@style/KeyStyle"
            android:text="8" />

        <Button
            style="@style/KeyStyle"
            android:text="9" />

        <Button
            style="@style/KeyStyle"
            android:text="0" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/KeyStyle"
            android:text="-"/>

        <Button
            android:id="@+id/key_1"
            style="@style/KeyStyle"
            android:text="1"/>
        <Button
            android:id="@+id/key_2"
            style="@style/KeyStyle"
            android:text="2"/>
        <Button
            android:id="@+id/key_3"
            style="@style/KeyStyle"
            android:text="3"/>

        <ImageButton
            android:id="@+id/backspace"
            style="@style/KeyStyle"
            android:src="@drawable/round_backspace_24" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/KeyStyle"
            android:text="+"/>
        <Button
            android:id="@+id/key_4"
            style="@style/KeyStyle"
            android:text="4"/>
        <Button
            android:id="@+id/key_5"
            style="@style/KeyStyle"
            android:text="5"/>
        <Button
            android:id="@+id/key_6"
            style="@style/KeyStyle"
            android:text="6"/>

        <Button
            style="@style/KeyStyle"
            android:text="("/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            style="@style/KeyStyle"
            android:text="/"/>
        <Button
            android:id="@+id/key_7"
            style="@style/KeyStyle"
            android:text="7"/>
        <Button
            android:id="@+id/key_8"
            style="@style/KeyStyle"
            android:text="8"/>
        <Button
            android:id="@+id/key_9"
            style="@style/KeyStyle"
            android:text="9"/>

        <Button
            style="@style/KeyStyle"
            android:text=")"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/key_dot"
            style="@style/KeyStyle"
            android:text="."/>

        <Button
            android:id="@+id/key_hash"
            style="@style/KeyStyle"
            android:text="#"/>

        <Button
            android:id="@+id/key_0"
            style="@style/KeyStyle"
            android:text="0"/>

        <ImageButton
            android:id="@+id/key_space"
            style="@style/KeyStyle"
            android:src="@drawable/round_space_bar_24"/>

        <ImageButton
            android:id="@+id/key_enter"
            style="@style/KeyStyle"
            android:src="@drawable/baseline_keyboard_return_24" />
    </LinearLayout>
</LinearLayout>